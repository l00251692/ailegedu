.search_box{
    padding:15rpx 25rpx;
    background:#ffd100;
} 
.search_box .search{
    background:#fff;
    border-radius:40rpx;
    position:relative;
    padding:0 40rpx 0 60rpx;
}

.search_box .search image{
    display:block;
    width:24rpx;
    height:24rpx;
    position:absolute;
    top:50%;
    left:24rpx;
    transform:translateY(-50%);
}

.search_box .search input{
    width:100%;
    height:57rpx;
    font:20rpx/57rpx '微软雅黑';
    color:#8a8990;
}


.list_wrap{
    padding-top:30rpx;
}
.list_wrap .title{
    display:block;
    padding-left:27rpx;
    font:28rpx/53rpx '微软雅黑';
    color:#191919;
    font-weight:bold;
    position:relative;
}

.list_wrap .title:before{
    content:'';
    display:block;
    width:8rpx;
    height:28rpx;
    background:#ffdc20;
    position:absolute;
    top:50%;
    left:12rpx;
    transform:translateY(-50%);
} 

.list .item{
    padding:19rpx 36rpx 0;
    border:1px solid #f2f2f2;
    border-radius:15rpx;
    margin-top:15rpx;
}
.list .top{
    display:flex;
    flex-direction:column;
    justify-content:center;
    padding-bottom:20rpx;
} 
.list .top .item_title ,.list .top .subtitle{
    /*font:25rpx/40rpx '微软雅黑'; */
    font:34rpx/56rpx '微软雅黑';
    font-weight:bold;
    color:#1f1f1f;
    display: -webkit-box;
    text-overflow:ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.list .top .subtitle{
     font:24rpx/40rpx '微软雅黑';
     color:#929292;
} 
.list .item .pro_img{
     position:relative;
}
.list .item .pro_img .tip{
    display:inline-block;
    font:26rpx '微软雅黑';
    color:#fff;
    position:absolute;
    top:19rpx;
    right:17rpx;
}
.list .item .pro_img image{
     display:block;
     width:100%;
     height:340rpx;  
}
.list .item .foot{
     display:flex;
     flex-direction:row;
     justify-content:space-between;
     padding:16rpx 0;
}
.list .item .foot .left{
    width:50%;
    box-sizing:border-box;
    padding-left:80rpx;
    position:relative;
} 
.list .item .foot .left image{
    display:block;
    width:60rpx;
    height:60rpx;
    border-radius:50%;
    position:absolute;
    left:5rpx;
    top:50%;
    margin-top:-22rpx;
}
.list .item .foot .left .activity_title{
    display:block;
    font:24rpx/40rpx '微软雅黑';
    color:#010101;
}
.list .item .foot .left .distance{
    display:block;
    font:16rpx/32rpx '微软雅黑';
    color:#9d9d9d;
}
.list .item .foot .right{
    width:50%;
    display:flex;
    flex-direction:column;
    justify-content:flex-end;
    text-align:right;
}
.list .item .foot .right .num{
    font:26rpx/44rpx '微软雅黑';
    color:#141414;
}
.list .item .foot .right .num text{
    font:28rpx/44rpx '微软雅黑';
    color:#141414;
    font-weight:bold;
}
.content{
    padding:0 25rpx;
}
.content .banner {
    padding:16rpx 13rpx 0;
}
.banner swiper , .banner swiper-item  , .banner image{
    display:block;
    width:100%;
    height:280rpx;
}
.banner swiper-item{
    border-radius:20rpx;
}

.img-plus-style {  
  height: 120rpx;  
  width: 120rpx;  
  position: fixed;  
  bottom: 60rpx;  
  right: 60rpx;  
  z-index: 500; 
  border-radius:50%; 
} 

