  <view class="banner">
       <view class="banner-img">
          <image src="{{info.project_head || '/images/default-project-head.png'}}" />
       </view>
        <text class="banner-img--license">关注点赞</text>
        <text class="banner-title">{{info.item_title}}</text>
    </view>
  <view class="shop-content">
    <view class=" weui-tab weui-tab_shop">
      <view class="weui-navbar">
        <view wx:for="{{tabs}}" wx:key="*this" id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
          <view class="weui-navbar__title">{{item}}</view>
        </view>
      </view>
      <swiper bindchange="swiperChange" current="{{activeIndex}}" autoplay="{{false}}" class="weui-tab__panel">
      <swiper-item class="weui-tab__content weui-tab__content_info">
          <view class="head">
                <view class="left">
                    <image class="img" src="{{info.create_userHead}}"></image>
                    <text class="username">{{info.create_userName}}</text>
                    <view class="time"><text >{{info.create_time}}</text></view>
                </view>
                <view class="right">
                    <text class="num">点击关注</text>
                </view>
          </view>
          <view class="info_text"><text class="info_text_area">{{info.subtitle}}</text></view>
        </swiper-item>
        <swiper-item class="weui-tab__content weui-tab__content_review">
        <scroll-view enable-back-to-top="true" bindscrolltolower="onScrolltolower" scroll-y="true">
          <view class="comments">
            <view class="item touch-active" wx:for="{{comments}}" wx:key="" wx:for-item="c">
              <view class="i-left">
                <image class="c-u-img" src="{{c.user_head}}"></image>
              </view>
              <view class="i-right">
                <view class="top">
                  <text class="u-name">{{c.user_name}}</text>
                  <text class="time">{{c.time}}</text>
                </view>

                <!--评论内容-->
                <view class="content">
                  {{c.comment}}
                </view>
              </view>
            </view>
          </view>
        
          <!--加载更多模版-->
          <block wx:if="{{loading}}">
            <template is="loading" />
          </block>
          <block wx:else>
            <template is="nodata" />
          </block>
          
