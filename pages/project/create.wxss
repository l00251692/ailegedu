.parent{
    height:100%;
    overflow:hidden;
}
.top{
    position:relative;
}
.top image{
    display:block;
    width:100%;
    height:398rpx;
}
.top .add_poster{
    display:inline-block;
    padding:0 24rpx 0 74rpx;
    font:26rpx/64rpx '微软雅黑';
    color:#fff;
    background:rgba(82,82,87,.5);
    position:absolute;
    bottom:38rpx;
    right:42rpx;
    border-radius:30rpx;
}
.top .add_poster image{
    display:block;
    width:30rpx;
    height:26rpx;
    position:absolute;
    top:50%;
    margin-top:-13rpx;
    left:26rpx;
}

/*content  */
.content{
    padding:0 0 0 0;
    height:auto;
    overflow:hidden;
}

.title{
  position:relative;
  display:flex;
  margin-left:20rpx;
  margin-right:20rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.input_inf{
    flex:20%;
    font:28rpx/120rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}
.input_inf2{
    flex:80%;
    font:28rpx/120rpx '微软雅黑';
    color:#919191;
    height:120rpx;
    width:100%;
}

.intruction{
  position:relative;
  margin-left:20rpx;
  margin-right:20rpx;
  height:100%;
}

.instr_inf{
    flex:4;
    font:28rpx/86rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}

.textarea{
    font:28rpx/40rpx '微软雅黑';
    color:#7a7985;
    height:500rpx;
    margin-bottom:80rpx;
    padding:5px 8px;
    width:100%;
    text-align:left;
    border:2rpx solid #e8e8e8;
    box-sizing:border-box;

}
.create{
    position:fixed;
    bottom:0;
    height:80rpx;
    width:100%;
    font:60rpx '微软雅黑';
    color:#2a2a2a;
    text-align:center;
}
.create::after{
    border:none;
}