.parent{
    flex:1;
    display:flex;
    flex-direction:column;
    box-sizing:border-box;
}
.top{
    position:relative;
}
.top image{
    display:block;
    width:100%;
    height:320rpx;
}
.top .add_poster{
    display:inline-block;
    padding:0 24rpx 0 74rpx;
    font:26rpx/64rpx '微软雅黑';
    color:#fff;
    background:rgba(82,82,87,.5);
    position:absolute;
    bottom:38rpx;
    right:42rpx;
    border-radius:30rpx;
}
.top .add_poster image{
    display:block;
    width:30rpx;
    height:26rpx;
    position:absolute;
    top:50%;
    margin-top:-13rpx;
    left:26rpx;
}

/*content  */
.content{
    padding:0 0 0 0;
    height:auto;
    overflow:hidden;
}

.title{
  position:relative;
  display:flex;
  padding-left:20rpx;
  padding-right:20rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.input_inf{
    font:28rpx/100rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}


.input_inf2{
    flex:70%;
    font:28rpx/120rpx '微软雅黑';
    color:#919191;
    height:100rpx;
    width:100%;
    padding-left:20rpx;
}

.location{
  position:relative;
  display:flex;
  padding-left:20rpx;
  padding-right:20rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.location_inf{
    font:28rpx/66rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}

.picker{
    flex:70%;
    font:28rpx/66rpx '微软雅黑';
    color:#919191;
    height:66rpx;
    width:100%;
    padding-left:20rpx;
}

.concat{
  position:relative;
  display:flex;
  padding-left:20rpx;
  padding-right:20rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.concat_inf{
    font:28rpx/66rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}
.concat_inf2{
    flex:70%;
    font:28rpx/66rpx '微软雅黑';
    color:#919191;
    height:66rpx;
    width:100%;
    padding-left:28rpx;
}

.intruction{
  position:relative;
  padding-left:20rpx;
  padding-right:20rpx;
  height:100%;
}

.instr_inf{
    flex:4;
    font:28rpx/66rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}

.tip{
    font:22rpx/66rpx '微软雅黑';
    color:#919191;
}

.textarea{
    font:28rpx/40rpx '微软雅黑';
    color:#7a7985;
    height:200rpx;
    padding:5px 8px;
    width:100%;
    text-align:left;
    box-sizing:border-box;

}

.upload-img{
  position:relative;
  display:flex;
  padding-left:20rpx;
  padding-right:20rpx;
  border-bottom:2rpx solid #e8e8e8;
}
.upload-img_inf{
    font:28rpx/66rpx '微软雅黑';
    color:#2a2a2a;
    font-weight:bold;
}

.img-upload{
  padding:10rpx;
  overflow:hidden;
  display:flex;
  flex-flow:wrap;
}

.img-upload .img-add{
	width: 100rpx;
	height: 100rpx;
	float: left;
	margin: 10rpx;
	border: 1rpx solid transparent;
}
.img-upload .img-add{
	border: 1rpx dashed #ddd;
  float:left;
  margin:10rpx;
}

.img-upload .img-add image{
	width: 100rpx;
	height: 100rpx;
}

.img-upload .img-item image{
	width: 100rpx;
	height: 100rpx;
  display:inline-block;
}
.img-upload .img-item{
	position: relative;
  margin:10rpx;
}
.img-upload .img-item icon{
	position: absolute;
	right: -12rpx;
	top: -12rpx;
}

.create{
    position:fixed;
    bottom:0;
    height:80rpx;
    width:100%;
    font:60rpx '微软雅黑';
    color:#2a2a2a;
    text-align:center;
}
.create::after{
    border:none;
}