<template name="goods-actions">
  <view class="goods-actions weui-flex">
    <block wx:if="{{num > 0}}">
      <view  data-goods-id="{{goods_id}}" data-sub-id="{{sub_id}}" data-select-property = "{{selectProperty}}"bindtap="decrease" class="goods-action-btn goods-action-btn_decrease">
        <image src="/images/decrease@2x.png" class="goods-action-btn__img"></image>
      </view>
      <view class="goods-action-num">{{num}}</view>
    </block>

    <view  data-goods-id="{{goods_id}}" data-sub-id="{{sub_id}}" data-tmpf="{{tmpf}}" data-tmps="{{tmps}}" data-tmpt="{{tmpt}}" data-select-property="{{select_property}}" bindtap="increase" class="goods-action-btn goods-action-btn_increase">
      <image src="/images/increase@2x.png" class="goods-action-btn__img"></image>
    </view>
  </view>
</template>